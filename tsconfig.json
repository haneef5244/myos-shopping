{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "types": [
         "jest"
      ]
   },
   "exclude": [
      "node_modules",
      "dist"
   ],
   "include": [
      "./src/**/*"
   ]
}